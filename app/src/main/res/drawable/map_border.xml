<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1B3754"/> <!-- Tło dla obramowania -->
            <stroke android:width="5dp" android:color="#00FFFF"/> <!-- Jasnoniebieskie obramowanie -->
            <corners android:radius="20dp"/> <!-- Zaokrąglenie rogów -->
        </shape>
    </item>
    <item android:right="5dp" android:left="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Wewnętrzne tło mapy -->
            <corners android:radius="20dp"/> <!-- Zaokrąglenie rogów wewnętrznego tła -->
        </shape>
    </item>
</layer-list>
